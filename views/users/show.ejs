<% include ../partials/header.ejs %>
<div class="row">
    <div class="col-md-3 col-sm-3" style="text-align: center">
        <h1><%= user.username%></h1>
        <div class="thumbnail">
            <img class="img-responsive" src="/images/Avatar-default.png">
            <hr>
            <div class="caption" style="text-align: center">

                <a href="mailto:<%= user.email%>"><%=user.email%></a>
            </div>
        </div>
    </div>
    <div class="col-md-9 col-sm-9">
        <div class="well">
            <h3><%= user.username%>'s profile</h3>
            <p>Still need to be done....</p>
            <hr>
        </div>
        <div class="well">
            <h3><%= user.username%>'s favorite</h3>
            <p>Still need to be done....</p>
            <hr>
        </div>
            <h3><%= user.username%>'s post</h3>
            <hr>
            <% items.forEach((item)=>{ %>
            <div class="col-md-3 col-sm-6" style="text-align: center">
                <div class="thumbnail">
                    <img src="<%= item.image %>">
                    <div class="caption">
                        <h4><%= item.name %></h4>
                        <label >Posted:<%= moment(item.createdAt).fromNow()%></label>
                    </div>
                    <hr>
                    <p>
                        <a href="/items/<%= item._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
            <%})%>
    </div>
</div>
<% include ../partials/footer.ejs %>
